    </servlet>
    <servlet-mapping>
        <servlet-name>UploadFiles</servlet-name>
        <url-pattern>/UploadFiles.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>save_image</servlet-name>
        <servlet-class>com.LJZ.Server.save_image</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>save_image</servlet-name>
        <url-pattern>/save_image</url-pattern>
