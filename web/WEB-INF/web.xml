        <servlet-name>Activation</servlet-name>
        <url-pattern>/activation</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Login_Filter</filter-name>
        <filter-class>com.LJZ.Filter.Login_Filter</filter-class>
        <init-param>
            <param-name>excPath</param-name>
            <param-value>/HTML_JSP/homepage.html,/HTML_JSP/LoginPC.html,/HTML_JSP/index.html,/HTML_JSP/Learn_list.html,/HTML_JSP/navigation.html,/HTML_JSP/course.html,/HTML_JSP/404.html,/HTML_JSP/navigation_dark.html,/HTML_JSP/Data/ClassCharts.html,/HTML_JSP/Data/DataAnalysis.html,/HTML_JSP/Data/StudentCharts.html</param-value>
        </init-param>
        <init-param>
            <param-name>teacherPath</param-name>
            <param-value>/HTML_JSP/Myclass.html,/HTML_JSP/basic_information.html,/HTML_JSP/image.html,/HTML_JSP/duration.html,/HTML_JSP/instructors.html,/HTML_JSP/students.html</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Login_Filter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <!--<listener>
        <listener-class>Session_Listener</listener-class>
    </listener>-->

</web-app>